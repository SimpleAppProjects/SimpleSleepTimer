<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:transitionGroup="true"
    tools:context=".wearable.WearPermissionsActivity"
    tools:theme="@style/Theme.Material3.DayNight.NoActionBar">

    <com.google.android.material.appbar.AppBarLayout
        style="@style/Widget.Material3.AppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:elevation="0dp"
        app:liftOnScroll="false">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            app:title="@string/title_sleeptimer" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/cat_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"
                android:paddingStart="0dp"
                android:paddingEnd="?android:attr/listPreferredItemPaddingRight"
                android:text="@string/cat_title_permissions"
                android:textAlignment="viewStart"
                android:textAppearance="?textAppearanceBodyMedium"
                android:textColor="?attr/colorPrimary" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/companion_pair_pref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/companion_pair_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:text="@string/permission_title_pairdevice"
                android:textAppearance="?textAppearanceTitleMedium"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/companion_pair_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/companion_pair_title"
                android:layout_alignStart="@+id/companion_pair_title"
                android:maxLines="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/companion_pair_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/companion_pair_summary"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:indeterminate="true"
                android:visibility="gone"
                tools:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/settings_cat_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"
                android:paddingStart="0dp"
                android:paddingEnd="?android:attr/listPreferredItemPaddingRight"
                android:text="@string/cat_title_settings"
                android:textAlignment="viewStart"
                android:textAppearance="?textAppearanceBody2"
                android:textColor="?attr/colorPrimary"
                tools:textColor="@color/colorPrimary" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bridge_timer_pref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:padding="16dp"
            android:background="?selectableItemBackground">

            <TextView
                android:id="@+id/bridge_timer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@id/bridge_timer_toggle"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:text="@string/preference_title_timerbridge"
                android:textAppearance="?textAppearanceTitleMedium"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bridge_timer_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bridge_timer_title"
                android:layout_alignStart="@id/bridge_timer_title"
                android:layout_toStartOf="@id/bridge_timer_toggle"
                android:maxLines="4"
                android:text="@string/preference_summary_timerbridge"
                android:textAppearance="?android:textAppearanceSmall" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/bridge_timer_toggle"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true" />

        </RelativeLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>